# ============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================
# IMPORTANT: Copy this file to .env.production and configure all values
# Never commit sensitive data to version control

# Application Settings
APP_NAME="Scuola di Danza"
APP_ENV=production
APP_KEY=base64:YOUR_32_CHAR_BASE64_KEY_HERE
APP_DEBUG=false
APP_TIMEZONE=Europe/Rome
APP_URL=https://your-domain.com
APP_LOCALE=it

# Security Settings
APP_CIPHER=AES-256-CBC
SANCTUM_STATEFUL_DOMAINS=your-domain.com
SESSION_DOMAIN=your-domain.com

# Database Configuration - Production MySQL
DB_CONNECTION=mysql
DB_HOST=your-db-host.com
DB_PORT=3306
DB_DATABASE=danzafacile_production
DB_USERNAME=danzafacile_user
DB_PASSWORD=STRONG_DB_PASSWORD_HERE

# Redis Cache Configuration - Production
REDIS_HOST=your-redis-host.com
REDIS_PASSWORD=REDIS_PASSWORD_HERE
REDIS_PORT=6379
REDIS_CLIENT=predis

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=danzafacile_prod

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_SAME_SITE=lax
SESSION_SECURE_COOKIES=true

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database-uuids

# File Storage Configuration
FILESYSTEM_DISK=public
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_DEFAULT_REGION=eu-west-1
AWS_BUCKET=danzafacile-storage
AWS_URL=https://danzafacile-storage.s3.amazonaws.com
AWS_ENDPOINT=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Mail Configuration - Production SMTP
MAIL_MAILER=smtp
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USERNAME=noreply@your-domain.com
MAIL_PASSWORD=EMAIL_PASSWORD_HERE
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single,slack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Slack Logging (for critical errors)
LOG_SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url
LOG_SLACK_USERNAME=ScuolaDanza-Bot
LOG_SLACK_CHANNEL=#alerts
LOG_SLACK_EMOJI=:rotating_light:

# Monitoring & Performance
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false
PULSE_ENABLED=true

# Security Headers
SECURE_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY_ENABLED=true

# Backup Configuration
BACKUP_DISK=s3
BACKUP_NOTIFICATION_MAIL=admin@your-domain.com
BACKUP_NOTIFICATION_SLACK=true

# CDN Configuration (optional)
CDN_URL=https://cdn.your-domain.com
ASSET_URL="${CDN_URL}"

# Performance Settings
BCRYPT_ROUNDS=12
DB_CONNECTION_TIMEOUT=30
DB_QUERY_TIMEOUT=60

# Rate Limiting
THROTTLE_REQUESTS_PER_MINUTE=60

# Maintenance Mode
MAINTENANCE_SECRET=your-maintenance-secret-key

# Additional Security
TRUSTED_PROXIES=*
TRUSTED_HOSTS=your-domain.com

# Analytics (optional)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXX-X
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Payment Gateway (if needed)
STRIPE_KEY=pk_live_your_stripe_key
STRIPE_SECRET=sk_live_your_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

PAYPAL_MODE=live
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Health Checks
HEALTH_CHECK_SECRET=your-health-check-secret

# Custom Application Settings
SCHOOL_DEFAULT_TIMEZONE=Europe/Rome
MAX_UPLOAD_SIZE=10240
ALLOW_REGISTRATION=true
REQUIRE_EMAIL_VERIFICATION=true
DEFAULT_PAGINATION=15

# Social Media (optional)
FACEBOOK_APP_ID=your_facebook_app_id
TWITTER_USERNAME=@YourSchoolHandle

# SSL/TLS Settings (handled by web server, but for reference)
# FORCE_HTTPS=true
# SECURE_COOKIES=true
# HTTP_STRICT_TRANSPORT_SECURITY=true